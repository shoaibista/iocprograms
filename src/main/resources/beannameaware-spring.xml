<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="company" class="com.semanticbits.shoaib.configurationapproach.beannameaware.Company">
        <property name="name" value="Semanticbits India"/>
    </bean>

    <bean id="myProject" class="com.semanticbits.shoaib.configurationapproach.beannameaware.Project">
        <property name="company" ref="company"/>
    </bean>
</beans>